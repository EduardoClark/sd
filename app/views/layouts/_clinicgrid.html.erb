<div class="container">
    <br><br><br>
 
    <div id="products" class="row list-group" >        
        <% @clinics.each do |clinic| %>
        <div class="item  col-xs-3 col-lg-3">
            
            <div class="thumbnail">                
                <div class="caption">
                    
                    <h4 class="group inner list-group-item-heading"><%= clinic.institucion %></h4>
                    <p><%= clinic.direccion %></p>
                    <div class="row" style=" display: flex;height: 100%;">
                    <div class="col-xs-6" style=" display: inline-block;align-self: flex-end;"><%= clinic.telefono %></div>
                    <div class="col-xs-6" style=" display: inline-block;align-self: flex-end;"><%= clinic.horario%></div>                        
                    </div>
                    <hr>
                   
                    <div class="row">
                         <div class="col-xs-6">
                         <ul>
                         <li type="disc">Prueba Rapida</li>
                         <li type="circle">Gratuita</li>
                         <li type="circle">Servicio Público</li>
                         </ul>
                         </div>
                         <div class="col-xs-6">
                         <ul>
                         <li type="circle">Prueba de ITS</li>
                         <li type="circle">Consejería</li>
                         </ul>                         
                         </div>                        
                    </div>
                               
              </div>                  
            </div>
        </div>  
        <% end %>
    </div>
    
</div>